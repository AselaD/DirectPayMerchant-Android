<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileActivity">

    <ImageButton
        android:id="@+id/imgButtonOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgButtonTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgButtonOne"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgButtonThree"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/imgButtonOne"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgButtonFour"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/imgButtonTwo"
        android:layout_alignTop="@+id/imgButtonThree"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgButtonFive"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgButtonOne"
        android:layout_marginBottom="14dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgButtonSix"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/imgButtonTwo"
        android:layout_alignTop="@+id/imgButtonFive"
        android:scaleType="fitXY" />
</RelativeLayout>